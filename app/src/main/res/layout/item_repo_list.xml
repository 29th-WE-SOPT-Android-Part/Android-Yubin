<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="15dp"
    android:background="@drawable/item_bg">

    <TextView
        android:id="@+id/tv_repo_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        tools:text="제목~~~~~~~\n~~~~~~~~~~~~~"
        android:textSize="16sp"
        android:textColor="@color/sopt_darkgray"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_repo_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_repo_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        tools:text="자기 소개 텍스트~~~~~~~~"
        android:textSize="13sp"
        android:textColor="@color/sopt_darkgray"
        android:ellipsize="end"
        android:ems="10"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@id/tv_repo_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_repo_title"
        app:layout_constraintEnd_toEndOf="@id/tv_repo_title" />

</androidx.constraintlayout.widget.ConstraintLayout>