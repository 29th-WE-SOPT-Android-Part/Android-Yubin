<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="SOPTHub"
        android:textSize="40sp"
        android:textColor="@color/sopt_pink"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/iv_profile"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/memo_2"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        android:textSize="20sp"
        android:textColor="@color/sopt_darkgray"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/iv_profile"
        app:layout_constraintLeft_toLeftOf="@id/iv_profile"
        app:layout_constraintRight_toLeftOf="@id/tv_name"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="최유빈"
        android:textSize="20sp"
        android:textColor="@color/sopt_darkgray"
        app:layout_constraintTop_toTopOf="@id/tv_name_text"
        app:layout_constraintLeft_toRightOf="@id/tv_name_text"
        app:layout_constraintRight_toRightOf="@id/iv_profile" />

    <TextView
        android:id="@+id/tv_age_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나이"
        android:textSize="20sp"
        android:textColor="@color/sopt_darkgray"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        app:layout_constraintLeft_toLeftOf="@id/tv_name_text" />

    <TextView
        android:id="@+id/tv_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="21"
        android:textSize="20sp"
        android:textColor="@color/sopt_darkgray"
        app:layout_constraintTop_toTopOf="@id/tv_age_text"
        app:layout_constraintLeft_toRightOf="@id/tv_age_text"
        app:layout_constraintRight_toRightOf="@id/iv_profile" />

    <TextView
        android:id="@+id/tv_mbti_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MBTI"
        android:textSize="20sp"
        android:textColor="@color/sopt_darkgray"
        android:layout_marginTop="30sp"
        app:layout_constraintTop_toBottomOf="@id/tv_age_text"
        app:layout_constraintLeft_toLeftOf="@id/tv_name_text"
        app:layout_constraintRight_toRightOf="@id/tv_name_text"/>

    <TextView
        android:id="@+id/tv_mbti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INFJ"
        android:textSize="20sp"
        android:textColor="@color/sopt_darkgray"
        app:layout_constraintTop_toTopOf="@id/tv_mbti_text"
        app:layout_constraintLeft_toRightOf="@id/tv_name_text"
        app:layout_constraintRight_toRightOf="@id/iv_profile" />

    <TextView
        android:id="@+id/tv_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_intro"
        android:textSize="18sp"
        android:textColor="@color/sopt_darkgray"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:paddingHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_mbti_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>