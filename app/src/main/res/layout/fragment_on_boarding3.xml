<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".onboarding.OnBoardingFragment3">

    <ImageView
        android:id="@+id/iv_profile"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/memo_3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_start_sopt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_start_sopt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="SOPTHub를\n시작해볼까요?"
        android:textColor="@color/main_pinkpower"
        android:layout_marginBottom="100dp"
        android:textFontWeight="700"
        android:textSize="24sp"
        android:fontFamily="@font/noto_sans_kr"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@id/iv_profile"
        app:layout_constraintBottom_toTopOf="@id/btn_next"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_next"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="시작하기"
        android:textColor="@color/white"
        android:textFontWeight="500"
        android:textSize="20sp"
        android:fontFamily="@font/noto_sans_kr"
        android:includeFontPadding="false"
        android:background="@drawable/bt_pink_bg"
        android:layout_marginBottom="50dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="15dp" />

</androidx.constraintlayout.widget.ConstraintLayout>