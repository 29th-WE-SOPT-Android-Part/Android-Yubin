<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <TextView
        android:id="@+id/tv_signup_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signup_text"
        android:textSize="25sp"
        android:textColor="@color/sopt_gray1"
        android:fontFamily="@font/noto_sans_kr"
        android:textFontWeight="700"
        android:includeFontPadding="false"
        android:layout_marginTop="80dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name_text"
        android:textSize="14sp"
        android:textColor="@color/sopt_gray1"
        android:fontFamily="@font/noto_sans_kr"
        android:textFontWeight="700"
        android:includeFontPadding="false"
        android:layout_marginTop="55dp"
        app:layout_constraintStart_toStartOf="@id/tv_signup_text"
        app:layout_constraintTop_toBottomOf="@id/tv_signup_text" />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="12dp"
        android:paddingHorizontal="16dp"
        android:inputType="textPersonName"
        android:hint="@string/et_name"
        android:textSize="14sp"
        android:fontFamily="@font/noto_sans_kr"
        android:textFontWeight="400"
        android:includeFontPadding="false"
        android:background="@drawable/signin_et_bg"
        android:layout_marginTop="6dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/id_text"
        android:textSize="14sp"
        android:textColor="@color/sopt_gray1"
        android:fontFamily="@font/noto_sans_kr"
        android:textFontWeight="700"
        android:includeFontPadding="false"
        android:layout_marginTop="34dp"
        app:layout_constraintStart_toStartOf="@id/tv_name"
        app:layout_constraintTop_toBottomOf="@id/et_name" />

    <EditText
        android:id="@+id/et_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="12dp"
        android:paddingHorizontal="16dp"
        android:inputType="textPersonName"
        android:hint="@string/et_id"
        android:textSize="14sp"
        android:fontFamily="@font/noto_sans_kr"
        android:textFontWeight="400"
        android:includeFontPadding="false"
        android:background="@drawable/signin_et_bg"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_id"
        app:layout_constraintLeft_toLeftOf="@id/et_name"
        app:layout_constraintRight_toRightOf="@id/et_name" />

    <TextView
        android:id="@+id/tv_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password_text"
        android:textSize="14sp"
        android:textColor="@color/sopt_gray1"
        android:fontFamily="@font/noto_sans_kr"
        android:textFontWeight="700"
        android:includeFontPadding="false"
        android:layout_marginTop="34dp"
        app:layout_constraintStart_toStartOf="@id/tv_id"
        app:layout_constraintTop_toBottomOf="@id/et_id" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:gravity="center_vertical"
        android:inputType="textPassword"
        android:hint="@string/et_password"
        android:textSize="14sp"
        android:fontFamily="@font/noto_sans_kr"
        android:textFontWeight="400"
        android:includeFontPadding="false"
        android:background="@drawable/signin_et_bg"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_password"
        app:layout_constraintLeft_toLeftOf="@id/et_id"
        app:layout_constraintRight_toRightOf="@id/et_id" />

    <Button
        android:id="@+id/bt_signup"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="12dp"
        android:background="@drawable/signin_bt_pink_bg"
        android:text="@string/signup_text"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:fontFamily="@font/noto_sans_kr"
        android:textFontWeight="700"
        android:includeFontPadding="false"
        android:layout_marginBottom="74dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@id/et_id"
        app:layout_constraintRight_toRightOf="@id/et_id" />

</androidx.constraintlayout.widget.ConstraintLayout>